<Window x:Class="FilesToTXT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesToTXT"
        mc:Ignorable="d"
        Title="FilesToTXT (+md5 hash)" Height="300" Width="auto" MinWidth="250" MinHeight="300" SizeToContent="WidthAndHeight">
    <Grid>
        <TextBox x:Name="PathTextBox" Text="Choose your path" VerticalAlignment="Top" Margin="10,20,54,0" 
                 MinWidth="100"/>
        <Button x:Name="SetDirectoryButton" Content="..." HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,2,0"
                BorderThickness="0" Width="50" Click="SetDirectoryButton_Click"/>
        <ScrollViewer  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Margin="10,43,0,0">
            <TextBox x:Name="ResultTextBox" BorderThickness="0"/>
        </ScrollViewer>
    </Grid>
</Window>
